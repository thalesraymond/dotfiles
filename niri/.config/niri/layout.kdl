layout {
    gaps 10

    center-focused-column "never"
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }
    focus-ring {
        width 2
    }

    shadow {
        softness 30
        spread 5
        offset x=0 y=5
    }
}